	<%= link_to "Create New Book", new_book_path %><br>
	<% @books.each do |book| %>
	<%= book.name %>
	<%= book.description %> 
	<%= book.price %> 
	<%= book.edition %> 
	<%= link_to "show", book_path(book) %>
	<%= link_to "edit", edit_book_path(book) %>
	<%= link_to "Destroy", book, method: :delete, data: {confirm: "are you sure"} %><br>
	<%end %>